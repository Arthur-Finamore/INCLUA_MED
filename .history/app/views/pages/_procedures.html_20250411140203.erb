<turbo-frame class="active-screen-default" id="active-screen">
  <div class="active-screen">
    <div class="main procedures-container">
      <h1 class="comece"> Procedimentos</h1>
      <p> Escolha o procedimento desejado: </p>
      <div class="procedures-bg" data-controller="procedures-carousel">
        <button class="carousel-button prev-button" data-procedures-carousel-target="prevButton">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
          </svg>
        </button>

        <div class="carousel-container" data-procedures-carousel-target="container">
          <div class="procedure-item" data-procedures-carousel-target="item">
            <%= link_to image_tag("exames/apresentacao.png", alt: "Apresentação", class: "procedures"), procedures_apresentacao_path, remote: true %>
            <p class="procedure-title">Apresentação</p>
          </div>
          <div class="procedure-item" data-procedures-carousel-target="item">
            <%= link_to image_tag("exames/pre-exame.png", alt: "Pré-exame", class: "procedures"), procedures_pre_exame_path, remote: true %>
            <p class="procedure-title">Pré-exame</p>
          </div>
          <div class="procedure-item" data-procedures-carousel-target="item">
            <%= link_to image_tag("exames/acuidade.png", alt: "Acuidade", class: "procedures"), procedures_acuidade_path, remote: true %>
            <p class="procedure-title">Acuidade visual</p>
          </div>
          <div class="procedure-item" data-procedures-carousel-target="item">
            <%= link_to image_tag("exames/biomicroscopia.png", alt: "Biomicroscopia", class: "procedures"), procedures_biomicroscopia_path, remote: true %>
            <p class="procedure-title">Biomicroscopia</p>
          </div>
          <div class="procedure-item" data-procedures-carousel-target="item">
            <%= link_to image_tag("exames/refracao.png", alt: "Refração", class: "procedures"), procedures_refracao_path, remote: true %>
            <p class="procedure-title">Exame de Refração</p>
          </div>
          <div class="procedure-item" data-procedures-carousel-target="item">
            <%= link_to image_tag("exames/tonometria.png", alt: "Tonometria", class: "procedures"), procedures_tonometria_path, remote: true %>
            <p class="procedure-title">Tonometria</p>
          </div>
        </div>

        <button class="carousel-button next-button" data-procedures-carousel-target="nextButton">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
          </svg>
        </button>
      </div>
    </div>
  </div>
</turbo-frame>
